@page
@model Back_Office_Web_Application.Pages.Stock.DeleteModel

@{
    ViewData["Title"] = "Удаление";
}

<h1>Удаление</h1>

<h3>Вы уверены что хотите удалить данный товар из склада?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock.ReceiptDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock.ReceiptDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock.SellDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock.SellDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock.Order)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock.Order.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock.Product)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock.Product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock.Status.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Stock.Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a href="#" onclick="history.back()">Назад</a>
    </form>
</div>
