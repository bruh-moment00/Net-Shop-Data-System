@page
@model Back_Office_Web_Application.Pages.Stock.DetailsModel

@{
    ViewData["Title"] = Html.DisplayFor(model => model.Stock.Product.Name) "на складе";
}

<h1>Подробно</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Дата прибытия
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock.ReceiptDate)
        </dd>
        <dt class="col-sm-2">
            Дата продажи
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock.SellDate)
        </dd>
        <dt class="col-sm-2">
            Номер заказа
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock.Order.Id)
        </dd>
        <dt class="col-sm-2">
            Товар
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock.Product.Name)
        </dd>
        <dt class="col-sm-2">
            Статус
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock.Status.Name)
        </dd>
    </dl>
</div>
<div>
	<a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Stock.Id">Редактировать</a> |
	<a href="#" onclick="history.back()">Назад</a>
</div>
